[% IF projects.size() > 0 %]
    <select name=project_id>
        <option>All</option>
        [% FOREACH project IN projects %]
            <option value='[% project.id() %]'[% IF project_id && project.id() == project_id %] selected[% END -%]>[% project.name() %]</option>
        [% END %]
    </select>
[% END %]
